@model IEnumerable<Library>

@{
    ViewData["Title"] = "Index Data";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>  
            <th>
                @Html.DisplayNameFor(x=> x.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                   @item.Thana
                </td>
                <td>
                    <a asp-action="Update" class="btn btn-primary btn-sm" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="LibraryDetails" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm delete-button">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
