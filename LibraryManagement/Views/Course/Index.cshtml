  @model IEnumerable<Course>

@{
    ViewData["Title"] = "Index";
}

<h1>Student Index </h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-sm">Create New</a>
</p>

<table class="table">

    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Mobile</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.Mobile</td>
                <td>
                    <a asp-action="Update" class="btn btn-primary btn-sm" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="LibraryDetails" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm delete-button">Delete</a>
                </td>
            </tr>
        }

    </tbody>

</table>